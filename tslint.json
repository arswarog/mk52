{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-console": false,
    "object-literal-sort-keys": false,
    "curly": [
      "warning",
      "multi"
    ],
    "sort-imports": "any",
    "ordered-imports": false,
    "comment-format": [
      false
    ],
    "prefer-const": [
      "warning"
    ],
    "no-unused-variable": [
      "warning"
    ],
    "no-string-literal": [
      "warning"
    ]
  }
}